@model WorkoutInfoModel
@{
    ViewData["Title"] = "Details";
}
<body style="background-color:lightgray">
    <br />
    <div class="text-center">
        <img src="@Model.ImageUrl" />
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <td style="color:black">Name</td>
                    <td style="color:black">Type</td>
                    <td style="color:black">Focus</td>
                    <td style="color:black">Difficulty</td>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td style="color:black">@Model.Name</td>
                    <td style="color:black">@Model.Type</td>
                    <td style="color:black">@Model.Focus</td>
                    <td style="color:black">@Model.Difficulty</td>
                </tr>
            </tbody>
        </table>
        @if (User.IsInRole(RoleConstants.AdminRole))
        {
            <table class="table text-left">
                <tbody>
                    <tr>
                        <td>
                            <a style="font-size:x-large" class="btn btn-sm btn-warning" href="/workouts/workouts/edit/@Model.Id">Edit</a>
                            <a style="font-size:x-large" class="btn btn-sm btn-danger" href="/workouts/workouts/delete/@Model.Id">Delete</a>
                        </td>
                    </tr>
                </tbody>
            </table>
        }
    </div>
</body>

