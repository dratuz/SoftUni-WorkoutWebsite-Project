@model ProgramViewModel
@{
    ViewData["Title"] = "Add Program";
}

<h2 style="color:white">Add Program</h2>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <h4 style="color:white">Create a new program.</h4>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label style="color:white" asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label style="color:white" asp-for="ImageUrl"></label>
                <input asp-for="ImageUrl" class="form-control" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
            <a href="/programs/programs/all" class="btn btn-default">Back</a>
            <button type="submit" class="btn btn-default">Add Program</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

